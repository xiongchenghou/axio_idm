body, h1, h2, h3, h4, h5, h6, p, ol, ul, dl, dt, dd, form, figure {
	margin: 0;
	padding: 0
}

h1, h2, h3, h4, h5, h6 {
	font-size: 100%;
	font-weight: normal
}

strong {
	font-weight: normal
}

table, td, th, tr, thead, tbody {
	border: none
}

table th {
	text-align: left;
	font-weight: normal
}

table {
	border-collapse: collapse
}

ul, ol {
	list-style: none
}

a {
	text-decoration: none
}

a img {
	border: none
}

img {
	vertical-align: bottom
}

textarea {
	font-size: 1em;
	border: none;
	border-radius: 0;
	outline: none;
	-webkit-appearance: none;
	-webkit-box-shadow: none;
	box-shadow: none
}

select {
	font-size: 1em;
	border: none;
	border-radius: 0;
	outline: none;
	-webkit-appearance: none;
	-moz-appearance: none;
	appearance: none;
	-webkit-box-shadow: none;
	box-shadow: none
}

select::-ms-expand {
	display: none
}

header, footer, section, nav, main, figure, figcaption, time, small {
	display: block
}

input[type="submit"], input[type="image"] {
	border: none;
	padding: 0
}

input[type="text"], input[type="email"], input[type="tel"], input[type="number"],
	input[type="password"] {
	outline: none;
	-moz-appearance: none;
	appearance: none;
	-webkit-appearance: none;
	border-radius: 0;
	-webkit-box-shadow: none;
	box-shadow: none
}

input[type="number"] {
	-moz-appearance: textfield
}

input[type="number"]::-webkit-outer-spin-button, input[type="number"]::-webkit-inner-spin-button
	{
	appearance: none;
	-webkit-appearance: none;
	-moz-appearance: none;
	margin: 0
}

button {
	border: none;
	margin: 0;
	cursor: pointer
}

input[type="submit"], input[type="image"], input[type="reset"] {
	cursor: pointer
}

address {
	font-style: normal
}

input, button, select, textarea {
	-webkit-appearance: none;
	-moz-appearance: none;
	appearance: none;
	background: transparent;
	border: none;
	border-radius: 0;
	outline: none
}

input::-webkit-input-placeholder {
	color: #929799
}

input:-ms-input-placeholder {
	color: #929799
}

input::-ms-input-placeholder {
	color: #929799
}

input::placeholder {
	color: #929799
}

ul {
	list-style: none
}

img {
	width: 100%;
	height: auto
}

* {
	-webkit-box-sizing: border-box;
	box-sizing: border-box
}

html {
	font-size: 62.5%;
	-webkit-font-smoothing: antialiased
}

body {
	position: relative;
	font-family: 'ヒラギノ角ゴシック', 'Hiragino Sans', 'Hiragino Kaku Gothic Pro',
		'ヒラギノ角ゴ Pro W3', メイリオ, Osaka, 'MS PGothic', sans-serif;
	line-height: 1.6;
	background-color: #F4F4F4;
	font-size: 16px;
	font-size: 1.6rem;
	min-width: 1280px
}

a {
	color: inherit;
	text-decoration: none
}

* {
	-webkit-box-sizing: border-box;
	box-sizing: border-box
}

main {
	position: relative
}

.header {
	padding: 10px 20px 14px;
	background-color: #fff
}

.header__inner {
	max-width: 1260px;
	margin: 0 auto;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-ms-flex-pack: justify;
	justify-content: space-between;
	-webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center
}

.header__img {
	width: 73px
}

.header__link {
	position: relative;
	margin-top: 2px;
	padding: 6px 20px 5px 28px;
	border-radius: 4px;
	border: 1px solid #ddd;
	z-index: 10;
	letter-spacing: -1px;
	font-size: 12px;
	font-size: 1.2rem
}

.header__link::before {
	position: absolute;
	content: "";
	width: 14px;
	height: 14px;
	background-image: url("/assets/img/common/icon_logout.svg");
	top: 50%;
	left: 12px;
	-webkit-transform: translateY(-50%);
	transform: translateY(-50%)
}

.footer {
	text-align: center;
	padding: 10px 0;
	background-color: #1F3990;
	letter-spacing: -0.5px;
	margin-top: 30px
}

.footer__text {
	color: #fff;
	font-size: 12px;
	font-size: 1.2rem
}

.modInput {
	font-size: 14px;
	font-size: 1.4rem;
	width: 100%;
	background-color: #F8F8F8;
	border: 1px solid #ddd;
	padding: 9px 11px 9px;
	background-size: 100%
}

.modTitleArea {
	background-color: #fff;
	border-top: 1px solid #ddd;
	border-bottom: 1px solid #ddd;
	margin-bottom: 40px
}

.modTitleArea__inner {
	position: relative;
	max-width: 1280px;
	margin: 0 auto
}

.modTitleArea__title {
	letter-spacing: -0.5px;
	font-size: 28px;
	font-size: 2.8rem;
	max-width: 1000px;
	margin: 0 auto;
	padding: 19px 0 16px
}

.login .main {
	min-height: 100vh;
	background-color: #fff
}

.loginField {
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	width: 560px;
	-webkit-box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	padding: 30px 60px 33px;
	letter-spacing: -1px
}

.loginField__img {
	width: 117px;
	margin: 0 auto 28px
}

.loginField__textArea:not (:first-child ){
	margin-top: 36px
}

.loginField__textArea__title {
	font-size: 14px;
	font-size: 1.4rem;
	margin-bottom: 5px
}

.loginField__textArea__eyeWrap {
	position: relative
}

.loginField__textArea__eyeWrap .icon {
	position: absolute;
	width: 14px;
	height: 14px;
	top: 50%;
	right: 12px;
	background-image: url("../img/icon_eyeclose.svg");
	background-size: 100%;
	background-repeat: no-repeat;
	background-position: center center;
	margin-top: -6px;
	cursor: pointer
}

.loginField__textArea__eyeWrap .icon--on {
	background-image: url("../img/icon_eyeopen.svg")
}

.loginField__textArea__text {
	font-size: 12px;
	font-size: 1.2rem;
	margin-top: 9px
}

.loginField__textArea__text--error {
	color: #DB0606
}

.loginField__button {
	display: block;
	color: #fff;
	padding: 11px 0 10px;
	width: 220px;
	margin: 45px auto 0;
	background-color: #1F3990;
	font-weight: 700
}

.loginField__link {
	text-align: center;
	margin-top: 11px
}

.loginField__link>a {
	font-size: 12px;
	font-size: 1.2rem;
	color: #1F3990
}

.menu .main__inner {
	max-width: 1000px;
	margin: 0 auto
}

.menuListArea {
	margin-top: 30px
}

.menuListArea__title {
	font-size: 18px;
	font-size: 1.8rem;
	padding-bottom: 5px;
	letter-spacing: 0;
	color: #1F3990;
	border-bottom: 1px solid rgba(31, 57, 114, 0.2)
}

.menuListArea__list {
	margin-top: 12px;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-ms-flex-wrap: wrap;
	flex-wrap: wrap
}

.menuListArea__list__item {
	width: calc(100%/ 7 - 13px);
	background-color: #fff;
	margin-right: 15.1px;
	-webkit-box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
	box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1)
}

.menuListArea__list__item:nth-child(7n) {
	margin-right: 0
}

.menuListArea__list__item>a {
	display: block;
	padding: 18px 10px 6px;
	border: 4px solid #fff;
	-webkit-transition: 0.3s all;
	transition: 0.3s all
}

.menuListArea__list__item>a:hover {
	border: 4px solid #203990
}

.menuListArea__list__item>a .img {
	width: 60px;
	margin: 0 auto
}

.menuListArea__list__item>a .text {
	color: #1F3990;
	margin-top: 16px;
	text-align: center;
	letter-spacing: -0.5px;
	font-weight: bold;
	font-size: 14px;
	font-size: 1.4rem
}

.menuListArea__list__item--file>a .img {
	width: 54px
}

.menuListArea__list__item--file>a .text {
	margin-top: 11px
}